{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="page-header d-print-none">
    <div class="row align-items-center">
        <div class="col">
            <h2 class="page-title">Modifier: {{ category.name }}</h2>
        </div>
    </div>
</div>

<div class="row row-deck row-cards">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Édition de la catégorie</h3>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                {{ form_errors(form) }}
                
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-footer mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-save me-2"></i>Mettre à jour
                    </button>
                    <a href="{{ path('admin_categories') }}" class="btn btn-secondary">
                        <i class="fa-solid fa-times me-2"></i>Annuler
                    </a>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

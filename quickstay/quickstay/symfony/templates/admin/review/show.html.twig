{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="page-wrapper">
  <div class="container-xl">
    <div class="page-header d-print-none">
      <div class="col"><h2 class="page-title">Avis</h2></div>
    </div>
  </div>

  <div class="page-body">
    <div class="container-xl">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <p><strong>Propriété:</strong> {{ review.property.title }}</p>
            <p><strong>Auteur:</strong> {{ review.author.name }}</p>
            <p><strong>Note:</strong> {{ review.rating }}/5</p>
            <p><strong>Commentaire:</strong> {{ review.comment }}</p>
            <div class="mt-4 d-flex gap-2">
                {% if not review.isApproved %}
                    <form action="{{ path('admin_review_approve', {id: review.id}) }}" method="post" style="display: inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ review.id) }}">
                        <button class="btn btn-success">
                            <i class="fa-solid fa-check me-2"></i>Approuver
                        </button>
                    </form>
                {% endif %}

                <form action="{{ path('admin_review_delete', {id: review.id}) }}" method="post" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet avis ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                    <button class="btn btn-danger">
                        <i class="fa-solid fa-trash me-2"></i>Supprimer
                    </button>
                </form>

                <a href="{{ path('admin_reviews') }}" class="btn btn-secondary ms-auto">Retour</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

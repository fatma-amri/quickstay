{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="page-wrapper">
  <div class="container-xl">
    <div class="page-header d-print-none">
      <div class="row align-items-center">
        <div class="col">
          <h2 class="page-title">Modifier: {{ user.email }}</h2>
        </div>
      </div>
    </div>
  </div>

  <div class="page-body">
    <div class="container-xl">
      <div class="row row-deck row-cards">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Édition de l'utilisateur</h3>
            </div>
            <div class="card-body">
              {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
              
              {{ form_errors(form) }}
              
                <div class="mb-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.plainPassword) }}
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'type': 'password'}}) }}
                    <small class="form-text text-muted">Laissez vide pour ne pas changer le mot de passe</small>
                    {{ form_errors(form.plainPassword) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.phone) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.address) }}
                    {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.address) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.avatarFile) }}
                    {{ form_widget(form.avatarFile, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.avatarFile) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.roles) }}
                    {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.roles) }}
                </div>

                <div class="mb-3">
                    <label class="form-check form-switch">
                        {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                        <span class="form-check-label">{{ form_label(form.isActive) }}</span>
                    </label>
                    {{ form_errors(form.isActive) }}
                </div>

                <div class="mb-3">
                    <label class="form-check form-switch">
                        {{ form_widget(form.isVerified, {'attr': {'class': 'form-check-input'}}) }}
                        <span class="form-check-label">{{ form_label(form.isVerified) }}</span>
                    </label>
                    {{ form_errors(form.isVerified) }}
                </div>

              <div class="form-footer mt-4">
                <button type="submit" class="btn btn-primary">
                  <i class="fa-solid fa-save me-2"></i>Mettre à jour
                </button>
                <a href="{{ path('admin_users') }}" class="btn btn-secondary">
                  <i class="fa-solid fa-times me-2"></i>Annuler
                </a>
              </div>
              
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

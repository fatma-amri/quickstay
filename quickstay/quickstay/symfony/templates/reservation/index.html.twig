{% extends 'base.html.twig' %}

{% block title %}Mes réservations - QuickStay{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fa-solid fa-calendar-check me-2 text-primary"></i>Mes réservations</h1>
        <a href="{{ path('app_properties') }}" class="btn btn-primary">
            <i class="fa-solid fa-search me-2"></i>Nouvelle réservation
        </a>
    </div>
    
    {% if reservations|length > 0 %}
        <div class="row">
            {% for reservation in reservations %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="position-relative">
                            {% if reservation.property.mainImage %}
                                <img src="{{ asset(reservation.property.mainImage) }}" 
                                     class="card-img-top" 
                                     alt="{{ reservation.property.title }}"
                                     style="height: 150px; object-fit: cover;">
                            {% else %}
                                <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 150px;">
                                    <i class="fa-solid fa-home fa-3x text-white"></i>
                                </div>
                            {% endif %}
                            
                            <span class="badge bg-{{ reservation.statusBadgeClass }} position-absolute top-0 end-0 m-2">
                                {{ reservation.statusLabel }}
                            </span>
                        </div>
                        
                        <div class="card-body">
                            <h5 class="card-title text-truncate">{{ reservation.property.title }}</h5>
                            <p class="card-text text-muted small mb-2">
                                <i class="fa-solid fa-location-dot me-1"></i>{{ reservation.property.city }}
                            </p>
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between small">
                                    <span><i class="fa-solid fa-calendar me-1"></i>Arrivée</span>
                                    <span>{{ reservation.startDate|date('d/m/Y') }}</span>
                                </div>
                                <div class="d-flex justify-content-between small">
                                    <span><i class="fa-solid fa-calendar me-1"></i>Départ</span>
                                    <span>{{ reservation.endDate|date('d/m/Y') }}</span>
                                </div>
                                <div class="d-flex justify-content-between small">
                                    <span><i class="fa-solid fa-moon me-1"></i>Durée</span>
                                    <span>{{ reservation.nights }} nuit(s)</span>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 mb-0 text-primary">{{ reservation.totalPrice|number_format(0, ',', ' ') }} TND</span>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-white">
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_reservation_show', {id: reservation.id}) }}" class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fa-solid fa-eye"></i> Détails
                                </a>
                                {% if reservation.isCompleted and not reservation.hasReview %}
                                    <a href="{{ path('app_review_new', {reservationId: reservation.id}) }}" class="btn btn-primary btn-sm flex-fill">
                                        <i class="fa-solid fa-star"></i> Laisser un avis
                                    </a>
                                {% endif %}
                                {% if reservation.canBeCancelled %}
                                    <a href="{{ path('app_reservation_cancel', {id: reservation.id}) }}" 
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('Voulez-vous vraiment annuler cette réservation ?')">
                                        <i class="fa-solid fa-times"></i>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="fa-solid fa-calendar-xmark fa-4x text-muted mb-3"></i>
            <h4>Aucune réservation</h4>
            <p class="text-muted mb-4">Vous n'avez pas encore effectué de réservation</p>
            <a href="{{ path('app_properties') }}" class="btn btn-primary btn-lg">
                <i class="fa-solid fa-search me-2"></i>Découvrir les propriétés
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}

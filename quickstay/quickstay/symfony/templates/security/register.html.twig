{% extends 'base.html.twig' %}

{% block title %}Inscription - QuickStay{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fa-solid fa-user-plus fa-3x text-primary mb-3"></i>
                        <h2 class="fw-bold">Créer un compte</h2>
                        <p class="text-muted">Rejoignez QuickStay et trouvez votre logement idéal</p>
                    </div>

                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        {{ form_errors(registrationForm) }}

                        <div class="mb-3">
                            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                                {{ form_widget(registrationForm.email) }}
                            </div>
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                                {{ form_widget(registrationForm.name) }}
                            </div>
                            {{ form_errors(registrationForm.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                {{ form_widget(registrationForm.plainPassword.first) }}
                            </div>
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                {{ form_widget(registrationForm.plainPassword.second) }}
                            </div>
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fa-solid fa-user-plus me-2"></i> S'inscrire
                        </button>
                    {{ form_end(registrationForm) }}

                    <hr class="my-4">

                    <p class="text-center mb-0">
                        Déjà un compte ? 
                        <a href="{{ path('app_login') }}" class="fw-bold text-primary">
                            Connectez-vous
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="page-wrapper">
  <div class="container-xl">
    <div class="page-header d-print-none">
      <div class="row align-items-center">
        <div class="col">
          <h2 class="page-title">Catégories</h2>
        </div>
        <div class="col-auto">
          <a href="{{ path('admin_category_new') }}" class="btn btn-primary">Ajouter</a>
        </div>
      </div>
    </div>
  </div>

  <div class="page-body">
    <div class="container-xl">
      <div class="card">
        <table class="table table-vcenter">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for category in categories %}
            <tr>
              <td>{{ category.name }}</td>
              <td>
                <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">Éditer</a>
              </td>
            </tr>
            {% else %}
            <tr><td colspan="2" class="text-center text-muted">Aucune catégorie</td></tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock %}

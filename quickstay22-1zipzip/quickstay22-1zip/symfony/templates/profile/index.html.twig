{% extends 'base.html.twig' %}

{% block title %}Mon profil - QuickStay{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Mon profil</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            {% if user.avatar %}
                                <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="{{ user.name }}" class="img-fluid rounded-circle" style="max-width: 150px; object-fit: cover;">
                            {% else %}
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 150px; height: 150px; font-size: 48px;">
                                    {{ user.name|default('User')|first|upper }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <h4>{{ user.name|default('Utilisateur') }}</h4>
                            <p class="text-muted mb-1">
                                <i class="fa-solid fa-envelope me-2"></i>{{ user.email }}
                            </p>
                            {% if user.phone %}
                            <p class="text-muted mb-1">
                                <i class="fa-solid fa-phone me-2"></i>{{ user.phone }}
                            </p>
                            {% endif %}
                            <p class="text-muted mb-1">
                                <i class="fa-solid fa-shield me-2"></i>
                                {% for role in user.roles %}
                                    <span class="badge bg-{{ role == 'ROLE_ADMIN' ? 'danger' : 'success' }}">
                                        {{ role|replace({'ROLE_': ''}) }}
                                    </span>
                                {% endfor %}
                            </p>
                            <p class="text-muted mb-3">
                                <i class="fa-solid fa-calendar me-2"></i>Inscrit depuis {{ user.createdAt|date('d/m/Y') }}
                            </p>
                            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
                                <i class="fa-solid fa-edit me-2"></i>Modifier mon profil
                            </a>
                        </div>
                    </div>

                    {% if user.address %}
                    <hr>
                    <div class="mb-3">
                        <h5>Adresse</h5>
                        <p class="text-muted">
                            <i class="fa-solid fa-map-marker-alt me-2"></i>{{ user.address }}
                        </p>
                    </div>
                    {% endif %}

                    {% if is_granted('ROLE_HOST') %}
                    <hr>
                    <div class="mb-3">
                        <h5>Mes propriétés</h5>
                        {% if user.properties|length > 0 %}
                            <p class="text-muted">Vous avez <strong>{{ user.properties|length }}</strong> propriété(s) listée(s)</p>
                            <a href="{{ path('admin_properties') }}" class="btn btn-outline-primary btn-sm">
                                <i class="fa-solid fa-building me-2"></i>Gérer mes propriétés
                            </a>
                        {% else %}
                            <p class="text-muted">Vous n'avez aucune propriété publiée</p>
                        {% endif %}
                    </div>
                    {% endif %}

                    {% if user.reservations|length > 0 %}
                    <hr>
                    <div class="mb-3">
                        <h5>Mes réservations</h5>
                        <p class="text-muted">Vous avez <strong>{{ user.reservations|length }}</strong> réservation(s)</p>
                        <a href="{{ path('app_reservations') }}" class="btn btn-outline-primary btn-sm">
                            <i class="fa-solid fa-calendar-check me-2"></i>Voir mes réservations
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
